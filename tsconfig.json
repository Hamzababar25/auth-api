{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./src/types"],

    "target": "ES2021",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
 "include": ["src", "src/types/**/*.d.ts"],
  "exclude": ["node_modules"]
}
